{
  "build": {
    "beforeDevCommand": "pnpm tauri:dev",
    "beforeBuildCommand": "pnpm tauri:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "serial-analyzer",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/server",
            "sidecar": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "binaries/server"
      ],
      "identifier": "com.serial-analyzer.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Serial Analyzer",
        "width": 1280, 
        "height": 720
      }
    ]
  }
}